{
  "name": "smartdevice2",
  "version": "0.1.0",
  "description": "SmartDevice React web UI",
  "scripts": {
    "build": "npm-run-all verify bundle",
    "bundle": "webpack",
    "clean": "rm -rf build coverage",
    "cover": "CI=true jest src -- --coverage",
    "cover-open": "open coverage/lcov-report/index.html",
    "flow": "flow",
    "format": "prettier-eslint --write src/**/*.js",
    "lint": "eslint --quiet src --ext .js",
    "test": "jest --watch src",
    "verify": "npm-run-all lint flow format cover"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.1.2",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "css-loader": "^0.28.7",
    "eslint": "^4.14.0",
    "eslint-plugin-flowtype": "^2.40.1",
    "eslint-plugin-html": "^4.0.1",
    "flow-bin": "^0.61.0",
    "jest": "^22.0.4",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.9.2",
    "prettier-eslint-cli": "^4.7.0",
    "style-loader": "^0.19.1",
    "webpack": "^3.10.0"
  }
}
