{
  "name": "web-crud",
  "version": "1.0.0",
  "description": "demo of a web app that uses CRUD REST servies",
  "main": "index.js",
  "scripts": {
    "build": "babel src -d build",
    "bundle": "webpack",
    "clean": "rm -rf build coverage",
    "cover": "CI=true npm test -- --coverage",
    "cover-open": "open coverage/lcov-report/index.html",
    "dbi": "mysql --user root",
    "dbsetup": "mysql --user root < ./ddl.sql",
    "dbstart": "mysql.server start",
    "dbstop": "mysql.server stop",
    "flow": "flow",
    "format": "prettier-eslint --write src/**/*.js",
    "lint": "eslint --quiet src --ext .js",
    "postinstall": "flow-typed install",
    "start": "node build/server.js",
    "start-dev": "babel-watch --message 'restarting' --ignore node_modules -- src/server.js",
    "test": "jest --watch src",
    "test-no-watch": "jest --force-exit src",
    "verify": "npm-run-all lint flow test-no-watch"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "dependencies": {
    "express": "^4.16.2",
    "express-healthcheck": "^0.1.0",
    "font-awesome": "^4.7.0",
    "morgan": "^1.9.0",
    "mysql-easier": "^1.2.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-watch": "^2.0.7",
    "css-loader": "^0.28.7",
    "eslint": "^4.13.1",
    "eslint-plugin-flowtype": "^2.40.1",
    "eslint-plugin-html": "^4.0.1",
    "eslint-plugin-react": "^7.5.1",
    "flow-bin": "^0.61.0",
    "flow-typed": "^2.2.3",
    "husky": "^0.14.3",
    "jest": "^22.0.4",
    "jest-cli": "^22.0.4",
    "mock-express-request": "^0.2.2",
    "mock-express-response": "^0.2.2",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.9.2",
    "prettier-eslint-cli": "^4.7.0",
    "style-loader": "^0.19.1",
    "webpack": "^3.10.0"
  }
}
